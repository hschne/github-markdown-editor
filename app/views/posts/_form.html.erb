<%= form_with(model: post, class: "contents",
              data: {
                controller: "preview",
                preview_url_value: preview_posts_path, 
                preview_upload_url_value: rails_direct_uploads_url 
              }) do |form| %>
  <% if post.errors.any? %>
    <div
      id="error_explanation"
      class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3"
    >
      <h2><%= pluralize(post.errors.count, "error") %>
        prohibited this post from being saved:</h2>

      <ul class="list-disc ml-6">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <div class="flex items-center my-2 gap-2">
      <button
        class="
          rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block
          font-medium
        "
        data-action="click->preview#editor"
        data-preview-target="editorButton"
        type="button"
      >
        Write
      </button>
      <button
        class="
          rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium
        "
        data-action="click->preview#preview"
        data-preview-target="previewButton"
        type="button"
      >
        Preview
      </button>
    </div>

    <div data-preview-target="editor">
      <%= form.textarea :body,
                    rows: 22,
                    data: {
                      preview_target: "editorContent",
                      action: "paste->preview#upload",
                    },
                    class: [
                      "block shadow-sm rounded-md border px-3 py-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600":
                          post.errors[:body].none?,
                        "border-red-400 focus:outline-red-600":
                          post.errors[:body].any?,
                      },
                    ] %>
    </div>

    <div
      id="preview"
      data-preview-target="preview"
      class="
        hidden p-4 border rounded-md bg-white prose max-w-none overflow-auto
        max-h-[545px]
      "
    >
    </div>
  </div>

  <div class="inline">
    <%= form.submit class:
                  "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
